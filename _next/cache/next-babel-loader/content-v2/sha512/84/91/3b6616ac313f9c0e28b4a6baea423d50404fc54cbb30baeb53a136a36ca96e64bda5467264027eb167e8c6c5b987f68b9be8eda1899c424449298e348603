{"ast":null,"code":"import Router from 'next/router';\nimport { tween } from 'popmotion';\nimport createPageRef from 'scroll-doc';\nimport * as easing from '@popmotion/easing';\nexport const pageRef = createPageRef();\nexport const goTop = (top = 0, cb) => {\n  tween({\n    from: pageRef.scrollTop,\n    to: top,\n    ease: easing.easeInOut\n  }).start(v => {\n    pageRef.scrollTop = v;\n\n    if (v === 0) {\n      cb && cb();\n    }\n  });\n};\nexport const goTopQuick = (top = 0) => {\n  pageRef.scrollTop = top;\n};\nexport function getElementTop(elem) {\n  let elemTop = elem.offsetTop;\n  elem = elem.offsetParent;\n\n  while (elem != null) {\n    elemTop += elem.offsetTop;\n    elem = elem.offsetParent;\n  }\n\n  return elemTop;\n}\nexport const goElementTop = (elem, cb) => {\n  const eleTop = getElementTop(elem);\n  goTop(eleTop, cb);\n};\nexport const pushGoTop = url => {\n  Router.push(url).then(() => goTopQuick());\n};\nexport const pushReplace = async (url, cb) => {\n  Router.replace(url).then(() => {\n    cb && cb();\n  });\n};\nexport const pushReplaceTop = async (url, cb) => {\n  pushReplace(url, () => {\n    goTopQuick();\n    cb && cb();\n  });\n};","map":null,"metadata":{},"sourceType":"module"}